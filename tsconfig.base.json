{
  "compilerOptions": {
    "target": "es2015",
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node"],
    "lib": ["es2019"],
    "declaration": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "apps/auth"
    }
  ]
}
